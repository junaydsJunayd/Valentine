  <script>
    let noCount = 0;

    function yesClicked() {
      document.getElementById("question").innerText = "Yay!! ðŸ’˜ I knew it ðŸ¥°";
      document.getElementById("buttons").style.display = "none";
      document.getElementById("sadImage").style.display = "none";
    }

    function noClicked() {
      const question = document.getElementById("question");
      const img = document.getElementById("sadImage");
      noCount++;

      question.innerText = "Are you sure? ðŸ¥º";
      img.style.display = "block";

      if (noCount > 1) {
        question.innerText = "Are you REALLY sure? ðŸ˜­";
      }
    }
